{% extends 'UerpMainBundle::main.html.twig' %}

{% block body -%}
<div class="panel panel-info" style="margin: 20px">
<div class="panel-heading">
    <h3>Fornecedor Lista </h3>
</div>
<div class="panel-body">

    <table class="table table-striped table-advance table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Suppliername</th>
                <th>Aux</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('supplier_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.suppliername }}</td>
                <td>{{ entity.aux }}</td>
                <td>
                	<a  class="btn btn-info btn-xs" href="{{ path('supplier_show', { 'id': entity.id }) }}"><i class="fa fa-eye"></i>show</a>
                    <a  class="btn btn-warning btn-xs" href="{{ path('supplier_edit', { 'id': entity.id }) }}"><i class="fa fa-pencil"></i>edit</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a  class="btn btn-success"  href="{{ path('supplier_new') }}">Create a new entry</a>
        </li>
    </ul>
    </div>
    {% endblock %}
