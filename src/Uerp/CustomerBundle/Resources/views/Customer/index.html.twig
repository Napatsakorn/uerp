{% extends 'UerpMainBundle::main.html.twig' %}
{% block title %}{% trans %} Customers {% endtrans %}{% endblock %}

{% block body -%}
    <div class="panel panel-info" style="margin: 20px">
    <div class="panel-heading">
        <h3>{% trans %} Customers {% endtrans %}</h3>
    </div>
    <div class="panel-body">
    <table class="table table-striped table-advance table-hover">
        <thead>
            <tr>

                <th>{% trans %}Name{% endtrans %}</th>
                <th>{% trans %}Phone number{% endtrans %}</th>
                <th>{% trans %}Mobile number{% endtrans %}</th>
                <th>{% trans %}Email{% endtrans %}</th>
                <th>{% trans %}District{% endtrans %}</th>
                <th>{% trans %}City{% endtrans %}</th>
                <th>{% trans %}Actions{% endtrans %}</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                
                <td>{{ entity.name }}</td>
                <td>{{ entity.phonenumber }}</td>
                <td>{{ entity.mobilenumber }}</td>
                <td>{{ entity.email }}</td>
                <td>{{ entity.district }}</td>
                <td>{{ entity.city }}</td>
                <td>
                <ul>

                        <a class="btn btn-info btn-xs" href="{{ path('customer_show', { 'id': entity.id }) }}"><i class="fa fa-eye"></i>{% trans %}show{% endtrans %}</a>
 
                        <a  class="btn btn-warning btn-xs" href="{{ path('customer_edit', { 'id': entity.id }) }}"><i class="fa fa-pencil">{% trans %}edit{% endtrans %}</a>

                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
	</div>
        <ul>
        <li>
            <a  class="btn btn-success" href="{{ path('customer_new') }}"><i class="fa fa-plus"></i>{% trans %} New Client {% endtrans %}</a>
        </li>
    </ul>
    {% endblock %}
