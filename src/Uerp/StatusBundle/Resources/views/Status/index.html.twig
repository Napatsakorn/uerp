{% extends 'UerpMainBundle::main.html.twig' %}
{% block title %} Status list {% endblock %}


{% block body -%}
<div class="panel panel-info" style="margin: 20px">
<div class="panel-heading">

    <h3>Status list</h3>
</div>
<div class="panel-body">
    <table class="table table-striped table-advance table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('status_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.description }}</td>
                <td>
                        <a  class="btn btn-info btn-xs"  href="{{ path('status_show', { 'id': entity.id }) }}">show</a>
                        <a  class="btn btn-warning btn-xs"  href="{{ path('status_edit', { 'id': entity.id }) }}">edit</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
        <ul>
        <li>
            <a  class="btn btn-success" href="{{ path('status_new') }}">Create a new entry</a>
        </li>
    </ul>
    {% endblock %}
