{% extends 'UerpMainBundle::main.html.twig' %}
{% block title %} Unidade de Produto {% endblock %}

{% block body -%}
    <div class="panel panel-info" style="margin: 20px">
    <div class="panel-heading">
        <h3>Lista de Unidades de Produto</h3>
    </div>
    <div class="panel-body">
	    <table class="table table-striped table-advance table-hover">
	        <thead>
	            <tr>
	                <th>Id</th>
	                <th>Description</th>
	                <th>Allowfraction</th>
	                <th>Actions</th>
	            </tr>
	        </thead>
	        <tbody>
	        {% for entity in entities %}
	            <tr>
	                <td><a href="{{ path('product_unit_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
	                <td>{{ entity.description }}</td>
	                <td>{{ entity.allowFraction }}</td>
	                <td>
	                
	                <a class="btn btn-info btn-xs" href="{{ path('product_unit_show', { 'id': entity.id }) }}">show</a>
	                <a class="btn btn-warning btn-xs" href="{{ path('product_unit_edit', { 'id': entity.id }) }}">edit</a>
	                
	                </td>
	            </tr>
	        {% endfor %}
	        </tbody>
	    </table>
	</div>

        <ul>
        <li>
            <a class="btn btn-success" href="{{ path('product_unit_new') }}">Create a new entry</a>
        </li>
    </ul>
    {% endblock %}
