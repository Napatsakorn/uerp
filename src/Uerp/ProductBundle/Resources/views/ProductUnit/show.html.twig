{% extends 'UerpMainBundle::main.html.twig' %}

{% block body -%}
    <h1>Product Unit</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ entity.description }}</td>
            </tr>
            <tr>
                <th>Allowfraction</th>
                <td>{{ entity.allowFraction }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('product_unit') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('product_unit_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
