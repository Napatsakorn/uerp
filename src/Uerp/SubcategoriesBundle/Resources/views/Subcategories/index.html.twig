{% extends 'UerpMainBundle::main.html.twig' %}
{% block title %} Sub Categories{% endblock %}

{% block body -%}
<div class="panel panel-info" style="margin: 20px">
<div class="panel-heading">
    <h3>Sub Categories</h3>
</div>
<div class="panel-body">

    <table class="table table-striped table-advance table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('subcategories_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.description }}</td>
                <td>
                     <a  class="btn btn-info btn-xs" href="{{ path('subcategories_show', { 'id': entity.id }) }}"><i class="fa fa-eye"></i>show</a>
                     <a  class="btn btn-warning btn-xs" href="{{ path('subcategories_edit', { 'id': entity.id }) }}"><i class="fa fa-pencil"></i>edit</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a class="btn btn-success" href="{{ path('subcategories_new') }}">Create a new entry </a>
        </li>
    </ul>
    </div>
    {% endblock %}
