{% extends 'UerpMainBundle::main.html.twig' %}
{% block title %} Bills Edit{% endblock %}
{% block body -%}
<section id="main-content">
    <section class="wrapper">

<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js" type="text/javascript"></script>

<script src="//code.highcharts.com/4.0.1/highcharts.js"></script>
<script src="//code.highcharts.com/4.0.1/modules/exporting.js"></script>
<script type="text/javascript">
    {{ chart(chart) }}
</script>

<div class="row">
    <div class="col-lg-9 main-chart">
					<div class="row">
						<!-- TWITTER PANEL -->
						<div class="col-md-8 col-lg-8 mb">
                      		<div class="darkblue-panel pn">
                      			<div class="darkblue-header">
						  			<h5>SALES STATICS</h5>
                      			</div>
                            <div id="piechart">

                            </div>
								<p>{{"now"|date('Y-m-d')}}</p>
                      		</div>
						</div><!-- /col-md-4 -->

						<div class="col-md-4 col-sm-4 mb">
							<!-- REVENUE PANEL -->
							<div class="darkblue-panel pn">
								<div class="darkblue-header">
									<h5>REVENUE</h5>
								</div>
								<div class="chart mt">
									<div class="sparkline" data-type="line" data-resize="true" data-height="75" data-width="90%" data-line-width="1" data-line-color="#fff" data-spot-color="#fff" data-fill-color="" data-highlight-line-color="#fff" data-spot-radius="4" data-data="[200,135,667,333,526,996,564,123,890,464,655]"></div>
								</div>
								<p class="mt"><b>$ 17,980</b><br/>Month Income</p>
							</div>
						</div><!-- /col-md-4 -->

					</div><!-- /row -->


                  </div><!-- /col-lg-9 END SECTION MIDDLE -->


                  <div class="col-lg-3 ds">

						<h3>OPEN BILLS</h3>
          {% for entity in bills %}
                      <div class="desc">
                      	<div class="thumb">
                          <a href="{{ path('bills_show', { 'id': entity.id }) }}">
                      		<span class="badge bg-theme"><i class="fa fa-clock-o"></i></span>
                        </a>
                      	</div>
                      	<div class="details">
                      		<p><muted>{% if entity.date %}{{ entity.date|date('Y-m-d') }}{% endif %}</muted> {{ entity.categories }} <br/>
                            {{ entity.subcategories }}   R$ {{ entity.value|number_format(2, ',', '.') }}</br>
                      		</p>
                      	</div>
                      </div>
                    {% endfor %}
                  </div><!-- /col-lg-3 -->
              </div>
            </section>
        </section>
{% endblock %}
